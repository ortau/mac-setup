#!/bin/bash
# Switch helm version

set -euo pipefail

if [ $# -lt 1 ]; then
    echo "usage: $0 VERSION" 1>&2
    exit 1
fi
version=$1

curl -fSL https://storage.googleapis.com/kubernetes-helm/helm-v${version}-darwin-amd64.tar.gz | tar xz -C $( dirname "${BASH_SOURCE[0]}" ) --strip-components=1 darwin-amd64/helm

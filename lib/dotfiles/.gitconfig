[user]
  name    = sergiomss

[credential]
	helper = osxkeychain

[alias]
  a       = add
  ap      = add -p
  cp      = cherry-pick
  cv      = commit -v
  f       = fetch
  fa      = fetch --all --tags
  pl      = pull --rebase
  ri      = rebase -i
  st      = status -sb
  ci      = commit
  br      = branch
  co      = checkout
  df      = diff
  dc      = diff --cached
  lg      = log -p
  lol     = log --graph --decorate --pretty=oneline --abbrev-commit
	lola    = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls      = ls-files

[color]
  branch  = auto
  diff    = auto
  status  = auto

[push]
  default = current

[core]
  editor        = vim
  excludesfile  = ~/.gitignore
